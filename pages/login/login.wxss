.wrapper {
  position: relative;
  z-index: 90;
  padding-bottom: 40rpx;
}

.left-top-sign {
  font-size: 120rpx;
  color: #f8f8f8;
  position: relative;
  left: -16rpx;
}

.welcome {
  position: relative;
  left: 50rpx;
  top: -90rpx;
  font-size: 46rpx;
  color: #555;
}

.input-content {
  padding: 0 60rpx;
}

.input-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  background-color: #f7f7f7;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.confirm-btn {
  margin: 20rpx;
  box-sizing: border-box;
  background-color: #5bc29a;
  color: #fff;
  border-radius: 40rpx;
}

.forget-section {
  text-align: center;
  color: #5bc29a;
}

.register-section {
  text-align: center;
  position: relative;
  bottom: 0;
}

.register-section text {
  color: #5bc29a;
}